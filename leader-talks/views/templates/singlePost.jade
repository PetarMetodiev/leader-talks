extends ../base

block vars
	- var title = 'LeaderTalks ' + blogpost.title

block content
	.article
		if user.login && user.role === 'admin'
			.btn-group.edit-buttons.btn-group-right.navbar-right
				button#edit-button.btn.btn-info(data-id='#{blogpost.id}')
					span.glyphicon.glyphicon-edit
				button#remove-button.btn.btn-danger(data-id='#{blogpost.id}')
					span.glyphicon.glyphicon-remove
		h1 #{blogpost.title}
		img.title-picture(src='#{blogpost.titlePicture}')
		div
			!= blogpost.content
		em Added&nbsp;
			span.relative-date #{blogpost.addedOn}
		if blogpost.updatedOn
			br
			em Updated on
				span.relative-date #{blogpost.updatedOn}


	script(src='/bower_components/moment/min/moment-with-locales.js')
	script(src='/javascripts/single-post-init.js')
