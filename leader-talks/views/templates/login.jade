extends ../base

block vars
    - var title = 'Login'

block content

    link(rel='stylesheet', href='/stylesheets/authentication.css')

    form.form-signin
        // h2.form-signin-heading Please login
        h2.bg-danger.text-danger Encrypt password before sending it to the server!
        label.sr-only(for='email') Email address
        input.form-control(type='email', id='email', placeholder='Email address', required, autofocus)
        label.sr-only(for='password') Password
        input.form-control(type='password', id="password", placeholder="Password", required)
        button.btn.btn-lg.btn-primary.btn-block(type='Submit') Login
        